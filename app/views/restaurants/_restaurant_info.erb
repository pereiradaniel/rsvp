<h2>Details:</h2>
<ul class="list-unstyled">
  <li>Capacity: <%= @restaurant.capacity %></li>
  <li>Address: </li>
  <li><%= @restaurant.street %></li>
  <li><%= @restaurant.city %>, <%= @restaurant.province %></li>
  <li>Postal code: <%= @restaurant.postal_code%></li>
  <li>Phone number: <%= @restaurant.phone_number%></li>
  <li>Cuisine type:
    <% @restaurant.cuisines.each do |cuisine_type| %>
    <%= cuisine_type.name %>
    <% end %>
  </li>
</ul>


<% if current_user && current_user.id == @restaurant.owner_id %>
  <ul class="list-unstyled list-inline">
    <li>
      <%= link_to "Delete", restaurant_path(@restaurant), method: :delete, data: {confirm: "Are you sure you want to delete this restaurant?"} %> 
      <%= link_to "Edit", edit_restaurant_url %>
    </li>
  </ul>
<% end %>

